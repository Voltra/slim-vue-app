{% macro navLink(text, name, param = {}, qs = {}) %}
	{% if is_current_url(name, param, qs) %}
		{{ text }}
	{% else %}
		<a href="{{ url_for(name, param, qs) }}">
			{{ text }}
		</a>
	{% endif %}
{% endmacro %}

